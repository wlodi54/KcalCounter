<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!--<item  android:right="2dp" android:top="2dp">
                <shape>
                    <corners android:radius="5dp"/>
                    <solid android:color="#F2C14E"/>
                </shape>
            </item>-->

            <item  android:bottom="1dp" android:left="1dp" android:top="1dp" android:right="1dp">
                <shape>
                    <corners android:radius="70dp"/>
                    <gradient android:angle="270" android:startColor="#F71D36" android:endColor="#A71D33" />
                    <stroke android:width="6dp" android:color="#FF9F1D"/>
                    <padding android:top="60dp" android:bottom="60dp" android:left="40dp" android:right="40dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item  android:bottom="1dp" android:left="1dp" android:top="1dp" android:right="1dp">
                <shape>
                    <corners android:radius="70dp"/>
                    <gradient android:angle="270" android:startColor="@color/colorAccentLight" android:endColor="@color/colorAccentLight" />
                    <stroke android:width="6dp" android:color="#FF9F1D"/>
                    <padding android:top="60dp" android:bottom="60dp" android:left="40dp" android:right="40dp"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>