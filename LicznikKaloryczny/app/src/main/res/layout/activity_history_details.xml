<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history_details"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.HistoryDetailsActivity">



    <TextView
        android:textColor="@color/fontLight"
        android:text="Czas:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:text="Śr. prędkość:"
        android:textSize="14sp"
        android:textColor="@color/fontLight"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="0,00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/history_details_disctanceVal"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/history_details_timeVal"
        android:textSize="18sp"
        android:textColor="@color/fontLight"/>

    <TextView
        android:text="0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/history_details_kcalMin"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:id="@+id/history_details_kcal_meter"
        android:textSize="18sp"
        android:textColor="@color/fontLight"/>

    <TextView
        android:id="@+id/history_details_disctanceVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/history_details_kmUnit"
        android:layout_marginTop="7dp"
        android:text="0,00"
        android:textColor="@color/fontLight"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/history_details_disctanceVal"
        android:layout_marginTop="10dp"
        android:text="Kalorie:"
        android:textColor="@color/fontLight"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView19"
        android:layout_marginBottom="7dp"
        android:text="kcal/min"
        android:textSize="13sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:text="kcal/m"
        android:textSize="13sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/history_details_kcalVal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView20"
        android:layout_marginTop="7dp"
        android:text="0,00"
        android:textColor="@color/fontLight"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/history_details_kcalMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="@color/fontLight"
        android:textSize="18sp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="@color/fontLight"
        android:text="Dystans:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/history_details_avrSpeedVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22"
        android:layout_below="@+id/textView22"
        android:layout_marginTop="7dp"
        android:text="0,00"
        android:textColor="@color/fontLight"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="33dp"
        android:layout_toEndOf="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:text="Dyscyplina:"
        android:textColor="@color/fontLight"

        android:textSize="14sp" />

    <TextView
        android:text="Odznaka:"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/history_details_odznakaLabel"
        android:textColor="@color/fontLight"
        android:layout_below="@+id/history_details_disciplineImg"
        android:layout_alignLeft="@+id/history_details_disciplineImg"
        android:layout_alignStart="@+id/history_details_disciplineImg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_skatebording"
        android:id="@+id/history_details_disciplineImg"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_alignRight="@+id/textView15"
        android:layout_alignEnd="@+id/textView15"
        android:layout_above="@+id/textView5"
        android:layout_below="@+id/textView15" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/brown_medal"
        android:id="@+id/history_details_medalImg"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignTop="@+id/history_details_avrSpeedVal"
        android:layout_alignLeft="@+id/history_details_odznakaLabel"
        android:layout_alignStart="@+id/history_details_odznakaLabel" />

    <TextView
        android:id="@+id/history_details_disciplineTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/history_details_timeVal"
        android:layout_alignBottom="@+id/history_details_timeVal"
        android:layout_alignLeft="@+id/textView15"

        android:layout_alignStart="@+id/textView15"
        android:layout_marginTop="10dp"
        android:text="Jazda na rowerze"
        android:textColor="@color/fontLight"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/history_details_kmUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:text="km"
        android:textSize="13sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/history_details_secUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/history_details_kmUnit"
        android:layout_alignBottom="@+id/history_details_kmUnit"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:text="sek"
        android:textSize="13sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:text="kcal"
        android:textSize="13sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:text="km/h"
        android:textSize="13sp"
        android:textStyle="italic" />

    <FrameLayout
        android:id="@+id/frameLayoutHistoryDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/history_details_kcal_meter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/fragmentMap"

            android:layout_marginTop="18dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/history_details_kcalVal"
        android:layout_marginTop="10dp"
        android:text="Tempo spalania"
        android:textColor="@color/fontLight" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/history_details_avrSpeedVal"
        android:layout_marginTop="10dp"
        android:text="Tempo spalania"
        android:textColor="@color/fontLight" />


</RelativeLayout>
