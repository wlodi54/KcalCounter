<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_plan_rowName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text="Brak planÃ³w"
        android:textSize="16sp"
        android:textColor="@color/fontLight"/>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_plan_rowIloscDni"
        android:background="@color/colorAccentLight"
        android:visibility="visible" />

    <TextView
        android:id="@+id/list_plan_rowIloscDni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_plan_rowName"
        android:padding="5dp"
        android:text="7 dni trenigowych"
        android:textColor="@color/fontLight"/>

    <TextView
        android:id="@+id/list_plan_rowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_plan_rowName"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/list_plan_rowName"
        android:layout_toRightOf="@+id/list_plan_rowName"
        android:padding="5dp"
        android:text=" 30-23-2016"
        android:textColor="@color/fontLight"/>

    <ImageView
        android:id="@+id/list_plan_rowIsLogged"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/list_plan_rowDate"
        android:padding="2dp"
        android:text="1"
        android:textColor="@color/fontLight"
        android:visibility="invisible"
         />

    <TextView
        android:id="@+id/list_plan_rowIloscTreningow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="12 treningow"
        android:layout_alignBaseline="@+id/list_plan_rowIloscDni"
        android:layout_alignBottom="@+id/list_plan_rowIloscDni"
        android:layout_toRightOf="@+id/list_plan_rowIloscDni"
        android:layout_toEndOf="@+id/list_plan_rowIloscDni"
        android:textColor="@color/fontLight"/>


</RelativeLayout>
