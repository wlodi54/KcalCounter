        android:textColor="@color/fontLight"
        android:layout_marginLeft="3dp" />

    <TextView
        android:text="km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/statistic_row_distance"
        android:layout_toRightOf="@+id/statistic_row_distance"
        android:layout_toEndOf="@+id/statistic_row_distance"
        android:id="@+id/statistic_row_distanceUnit"
