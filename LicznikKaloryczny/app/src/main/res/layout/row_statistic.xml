        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_marginTop="15dp" />

    <TextView
        android:textColor="@color/fontLight"
        android:text="1234"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView25"
        android:layout_alignLeft="@+id/statistic_row_discipline"
        android:layout_alignStart="@+id/statistic_row_discipline"
        android:id="@+id/statistic_row_kcal" />

    <TextView
        android:textColor="@color/fontLight"
