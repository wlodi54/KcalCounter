<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.UserDetailsFragment"
    android:id="@+id/fragment_user_details"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <TextView
        android:text="Slimak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_details_poziom"
        android:textAlignment="center"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:textColor="@color/fontLight"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@mipmap/dog"

        android:id="@+id/user_details_animal"
        android:layout_below="@+id/user_details_poziom"
        android:layout_centerHorizontal="true" />
    <Button
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_details_deleteBtn"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:background="@drawable/button_small2"
        android:text="Usuń"
        android:textColor="@color/fontLight"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/user_details_braz_odznaka"
        android:layout_toEndOf="@+id/user_details_braz_odznaka" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_details_zloto_odznaka"
        android:textAlignment="center"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:textSize="16sp"
        android:textColor="@color/fontLight"/>

    <TextView
        android:text="Odznaki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:ems="10"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/user_details_animal"
        android:layout_centerHorizontal="true"
        android:textColor="@color/fontLight"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gold_medal"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/brown_medal"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toLeftOf="@+id/user_details_height_edit_text"
        android:layout_toStartOf="@+id/user_details_height_edit_text" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_details_braz_odznaka"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toLeftOf="@+id/textView9"
        android:layout_toStartOf="@+id/textView9"
        android:textColor="@color/fontLight"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_details_srebro_odznaka"
        android:textSize="16sp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:textColor="@color/fontLight"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/silver_medal"
        android:id="@+id/imageView4"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/user_details_height_edit_text"
        android:layout_toEndOf="@+id/user_details_height_edit_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/user_details_weight_edit_text"
        style="@style/Widget.AppCompat.EditText"
        android:hint="Weight"
        android:background="@color/fontLight"
        android:textColorHint="@color/hintColor"
        android:padding="5dp"
        android:layout_below="@+id/textView16"
        android:layout_alignLeft="@+id/user_details_name_edit_text"
        android:layout_alignStart="@+id/user_details_name_edit_text" />

    <TextView
        android:text="Waga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_below="@+id/user_details_name_edit_text"
        android:layout_alignLeft="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:textAlignment="center"
        android:textColor="@color/fontLight"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/user_details_height_edit_text"
        android:layout_marginTop="17dp"
        android:inputType="numberDecimal"
        android:hint="Height"
        android:background="@color/fontLight"
        android:textColorHint="@color/hintColor"
        android:padding="5dp"
        android:layout_below="@+id/user_details_weight_edit_text"
        android:layout_alignLeft="@+id/user_details_weight_edit_text"
        android:layout_alignStart="@+id/user_details_weight_edit_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/user_details_name_edit_text"
        android:hint="Name"
        android:background="@color/fontLight"
        android:textColorHint="@color/hintColor"
        android:padding="5dp"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Wzrost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:textAlignment="center"
        android:layout_below="@+id/user_details_weight_edit_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/fontLight"/>

    <Button
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_details_saveBtn"
        android:textStyle="normal|bold"
        android:textSize="14sp"
        android:background="@drawable/button_small2"
        android:text="Zapisz"
        android:textColor="@color/fontLight"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/user_details_srebro_odznaka"
        android:layout_alignEnd="@+id/user_details_srebro_odznaka" />

    <TextView
        android:text="Imię"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textAlignment="center"
        android:textColor="@color/fontLight"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Ranga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="20sp"
        android:textColor="@color/fontLight"
        android:layout_below="@+id/user_details_height_edit_text"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
